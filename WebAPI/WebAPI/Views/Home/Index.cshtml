
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Profile</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Designation</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="empdata">
        </tbody>
    </table>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        $.ajax({
            url: 'https://localhost:44363/api/getemployee',
            type: 'GET',
            success: function (response) {
                
                var html = '';
                $.each(response, function (key, item) {
                    html += '<tr>';
                    html += '<td><img style=height:100px;width:100px;border-radius:5px src="' + item.Profile + '"></td>';
                    html += '<td>' + item.Name + '</td>';
                    html += '<td>' + item.Email + '</td>';
                    html += '<td>' + item.Gender + '</td>';
                    html += '<td>' + item.PhoneNumber + '</td>';
                    html += '<td>' + item.DesignationName + '</td>';
                    html += '<td> <a onclick= empEdit(' + item.ID + ') class="btn btn-info">Edit</a> </td > ';
                    html += '<td> <a onclick = empDelete(' + item.ID + ') class="btn btn-danger">Delete</a > </td>';
                    html += '<img src>';
                    html += '</tr>';
                });
                $('.empdata').html(html);
            },
            error: function (error) {
                debugger;
                alert("Something wrong in code!!");
            }

        });
    });
    function empEdit(ID) {
        
        var redirecturl = '@Url.Action("Update","Home")?id=' + ID;
        window.location.href = redirecturl;
    }
    function empDelete(ID) {
        debugger;
        swal({
            title: "Warning",
            text: "Are you sure you want to delete this record?",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((empdata) => {
            if (empdata) {
                $.ajax({
                    url: 'https://localhost:44363/api/deleteemployee?ID=' + ID,
                    method: 'DELETE',
                    success: function () {
                        location.reload();
                    }
                });
            }
        });
    }

</script>
